<% provide(:title, 'Create a Class') %>
<h1>New Class</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @klass do |f| %>
      <%= render 'shared/klass_error_messages' %>
      <%= f.label :klass_name, "Class Name" %>
      <%= f.text_field :klass_name, class: 'form-control' %>
      
      <%= f.label :day %>
      <%= f.select :day, options_for_select([["Select One", ""], "Monday",
                          "Tuesday", "Wednesday", "Thursday", 
                          "Friday", "Saturday", "Sunday", "Other"], class: 'form-control') %>
      <%= f.submit  "Create class", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
      
      